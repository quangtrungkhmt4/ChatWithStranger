<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.example.quang.chatwithstranger.views.CustomTextView
        android:layout_width="wrap_content"
        android:text="Time"
        android:padding="5dp"
        android:id="@+id/tvTimeItemMessase"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorBackround"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:layout_marginRight="60dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imAvatarItemMessage"
            android:layout_gravity="left|bottom"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="50dp"
            android:src="@color/colorBackround"
            android:layout_height="50dp" />

        <com.example.quang.chatwithstranger.views.CustomTextView
            android:id="@+id/tvTextItemMessage"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorBackround"
            android:padding="10dp"
            android:layout_gravity="left|bottom"
            android:layout_marginLeft="60dp"
            style="?android:attr/textAppearanceMedium"
            android:text="hellofffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/imPhotoItemMessage"
            android:padding="10dp"
            android:layout_gravity="left|bottom"
            android:layout_marginLeft="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
</LinearLayout>






